<!-- On the far left, our logo -->
<div class="logo">Logo Here</div>

<!-- In the middle, search bar -->
<div class="search-bar">
	<%= render partial: "quotes/search" %>
</div>
<!-- On the far right, logging options and nav bar -->
<div class="dashboard">
	<% if logged_in? %>
		<div><%= current_user.goodreads_name %></div>
		<a href="/sign_out">Sign out</a><br/>
		<nav>
			<%= button_to "", bookclubs_path, method: :get, class: "nav-bookclubs" %>
			<%= button_to "NB", home_path, method: :get, class: "nav-notebook" %>
			<%= button_to "PQ", quote_search_path, method: :post, class: "nav-public" %>
		</nav>
	<% else %>
		<a href="/sign_in">Sign in with GoodReads</a>
	<% end %>
</div>


