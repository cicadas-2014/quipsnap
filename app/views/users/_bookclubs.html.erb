<div class="users-bookclubs clearfix">
	<% if @bookclubs %>
		<p>My Bookclubs</p>
		<ul>
		<% @bookclubs.each do |bookclub| %>
			<li id="<%=bookclub.id%>" class="a-book">
        <div class='cover-top'></div>
          <div class='book-pages' id='<%=bookclub.id%>'><%= button_tag bookclub.name, id: bookclub.id %></div>
        <div class='cover-bottom'></div>
        </li>
		<% end %>
		</ul>
	<% end%>
</div>

<div class="success">
	<p>Added to bookclub!</p>
</div>

<div class="failure">
	<p>Quote already in club!</p>
</div>