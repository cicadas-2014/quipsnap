<!-- This uses the Ransack gem to allow for search -->

<%= search_form_for @search, url: quote_search_path, html: { method: :post } do |f| %>
  <%= f.label "Book:" %>
  <%= f.search_field :book_title_cont %>

  <%= f.label "Author:" %>
  <%= f.search_field :author_name_cont %>

  <%= f.label "User:" %>
  <%= f.search_field :user_goodreads_name_cont %>

  <%= f.submit "", class: "search" %>
<% end %>

<%= button_to "", home_path, method: :get, class: "clear-search" %>